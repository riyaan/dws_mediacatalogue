<Window x:Class="MediaCatalogue_WPF.Search"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MediaCatalogue_WPF"
        mc:Ignorable="d"
        Title="Search" Height="300" Width="300" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <Label x:Name="lblResults" Content="Search results" HorizontalAlignment="Left" Margin="10,22,0,0" VerticalAlignment="Top" Width="274" FontWeight="Bold" FontSize="16"/>
        <DataGrid x:Name="dgSearchResults" ItemsSource="{Binding actors}" HorizontalAlignment="Left" Margin="10,56,0,0" VerticalAlignment="Top" Height="208" Width="274"/>

    </Grid>
</Window>
